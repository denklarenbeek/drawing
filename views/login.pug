extends layout

block content
    .login-header
        img(src='img/logo-eye-opening.jpg')
    .login-arrow
        .login-arrow-text
            h1 Sales Applicatie
        .login-arrow-right
    .login-field
        form(action="/login" method="POST")
            .input-email
                label(for='email') Email adres
                input(type='email'  name='email'  id='email' required onblur='movelabel(this)')
            .input-password
                label(for='password') Wachtwoord
                input(type='password' name='password' id='password' required)
            button(type='submit') login