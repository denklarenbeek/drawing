extends layout

block content
    .login-field
        form(action="/register" method="POST")
            .input-name
                input(type='text' name='name' id='name' required)
                label(for='name') Naam
            .input-email
                input(type='email'  name='email'  id='email' required onblur='movelabel(this)')
                label(for='email') Email adres
                i(class='fal fa-envelope-square')
            .input-password
                input(type='password' name='password' id='password' required)
                label(for='password') Wachtwoord
                i(class="fal fa-unlock")
            .input-admin
                label(for='admin') Admin:
                input(type='radio' name='admin' id='admin' value='true')
            input(type='submit' value='Login')