extends layout

include mixins/_opportunityCard

block content
    .container
        .title-tile
            h1 Your opportunities
        .content-tile
            .inner
                each account in oppsByAccount
                    .account-container
                        p.account_name #{account._id}
                        span.count #{account.count}
                        .opp-container
                            p.name Naam
                            p.amount Bedrag
                            p.scotsman Kans
                            p.weighted_amount Gewogen
                            p.month Q
                        each opp in account.opp
                            +opportunityCard(opp)
                    
                    