extends layout

block content
    .container
        .title-tile
            h1 Create PriceCast Contract
        .content-tile
            .inner#createpcf
                form(id='firstform' method="POST")
                    h2 Debiteur
                    .input-container
                        label(for='company') Bedrijfsnaam
                        input(type='text' name='company' id='company' required)
                    .input-container
                        label(for='zippcode') Postcode
                        input(type='text'  name='zippcode'  id='zippcode' required)
                    .input-container
                        label(for='housenumber') Huisnummer
                        input(type='text'  name='housenumber'  id='housenumber' required)
                    .input-container
                        label(for='city') Plaatsnaam
                        input(type='text'  name='city'  id='city' required)
                    .input-container
                        label(for='street') Straatnaam
                        input(type='text'  name='street'  id='street' required)
                    h2 Duur contract
                    .input-group.contract_duration
                        .input-container
                            input(type='radio' id='12months' class='duration_month' name='contract_duration' value='12' checked)
                            label(for='12months') 12 maanden  
                        .input-container
                            input(type='radio' id='24months' class='duration_month' name='contract_duration' value='24' ) 
                            label(for='24months') 24 maanden
                        .input-container
                            input(type='radio' id='36months' class='duration_month' name='contract_duration' value='36' )
                            label(for='36months') 36 maanden 
                    .input-container
                        label(for='starting_date') Startdatum
                        input(type='date' name='starting_date' id='starting_date' required value='2019-01-01')    
                    h2 Locaties
                    table
                        thead
                            tr
                                th Name
                                th Hard.
                                th Fee
                                th
                                    a(class="btn" id='createNewRow')
                                        i(class="fas fa-plus")

                        tbody
                            
                    h2 Opties
                    .input-container
                        input(type='checkbox' name='send_by_email' id='send_by_email')
                        label(for='send_by_email') Verstuur per email
                    #send_to_email_container
                        .input-container
                            label(for='send_to_email') E-mail adres 
                            input(type='email' name='send_to_email' id='send_to_email')
                        .input-container
                            label(for='send_to_name' class='fixed') T.a.v. 
                            input(type='text' name='send_to_name' id='send_to_name')

                    button(type='submit') Genereer contract  